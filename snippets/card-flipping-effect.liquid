{% style %}
.flipping-container{
    margin: 0 auto;
    padding: 1rem;
    width: -webkit-fill-available;
    text-align: center;
    background: {{ container_bg_color }};
    
}
.activity-title{
    padding: 1rem;
    font-size: 20px;
    font-weight: bold;
    text-transform: uppercase;
}
.activity-title,.time-name{
    color: transparent; /* 文字透明以显示背景 */
    background: {{ multi_text_color }};
    background-size: 300%;
    -webkit-background-clip: text; /* 兼容性处理 */
    background-clip: text;
    animation: move 10s linear infinite;
}
 .card-flipping-item-box {
    margin: 0 auto;
    position: relative;
    background: var(--color-background);
    width: 50px;
    height: 50px;
    border-radius: .3rem;
    overflow: hidden;
 }
 .card-item {
     position: absolute;
     top: 0;
     left: 0;
     width: 100%;
     height: 50%;
     background: {{ card_bg_color }};
     color: white;
     text-align: center;
     line-height: 50px;
     overflow: hidden;
     backface-visibility: hidden;
     letter-spacing: 2px;
     font-size: 1.2rem;
     font-weight: bolder;
     mix-blend-mode: difference;
 }
 .card_2 {
    top: 50%;
    line-height: 0;
    transform: rotateX(180deg);
    transform-origin: center top;
    z-index: 99;
 }
 
 .card_3 {
     transform: rotateX(0deg);
     transform-origin: center bottom;
     
 }
 
 .card_4 {
    top: 50%;
    line-height: 0;
    
    z-index: 9;
 }
 .card-flipping-effect-box{
    display: flex;
    justify-content: center;
    align-items: center;
   
 }
 .card-flipping__4 .card-item {
    mix-blend-mode: multiply;
 }
.flipping-card__box{
    padding: .3rem;
}
 .flip_card_2 {
     animation: flip_card_2 .5s ease-in-out;
 }
 .flip_card_3 {
     animation: flip_card_3 .5s ease-in-out;
 }
.time-name{
    width: 60px;
    margin-top: .5rem;
    text-transform: capitalize;
    animation-delay: 1s;
}


 @keyframes flip_card_2 {
     0% {
         transform: rotateX(180deg);
     }
     100% {
         transform: rotateX(0deg);
     }
 }
 @keyframes flip_card_3 {
     0% {
         transform: rotateX(0deg);
     }
     100% {
         transform: rotateX(-180deg);
     }
 }
 @keyframes move {
  0% { background-position: 300% 0; }
  100% { background-position: -300% 0; }
}

{% endstyle %}

<div class="flipping-container">
    
    {% if localization.language.iso_code == 'en' %}
        <div class="activity-title">
            <span>{{ "activity.title" | t }}</span>
            <span>{{ "activity.countdown" | t}}</span>
        </div>
    {% else %}
        <h3 class="activity-title">{{ "activity.title" | t }}{{ "activity.countdown" | t}}</h3>    
    {% endif %}
    <div class="card-flipping-effect-box">
        <div class="flipping-card__box">
            <div class="card-flipping-item-box card-flipping-day card-flipping__1"  data-time-name="day">
                <div class="card-item card_1">00</div>
                <div class="card-item card_2">00</div>
                <div class="card-item card_3">00</div>
                <div class="card-item card_4">00</div>
            </div>
            <div class="time-name">{{ 'activity.day' | t}}</div>
        </div>
        <div class="flipping-card__box">
            <div class="card-flipping-item-box card-flipping-day card-flipping__2"  data-time-name="hour">
                <div class="card-item card_1">00</div>
                <div class="card-item card_2">00</div>
                <div class="card-item card_3">00</div>
                <div class="card-item card_4">00</div>
            </div>
            <div class="time-name">{{ 'activity.hour' | t}}</div>
        </div>
        <div class="flipping-card__box">
            <div class="card-flipping-item-box card-flipping-day card-flipping__3"  data-time-name="minute">
                <div class="card-item card_1">00</div>
                <div class="card-item card_2">00</div>
                <div class="card-item card_3">00</div>
                <div class="card-item card_4">00</div>
            </div>
            <div class="time-name">{{ 'activity.minute' | t}}</div>
        </div>
        <div class="flipping-card__box">
            <div class="card-flipping-item-box card-flipping-day card-flipping__4 gradient"  data-time-name="second">
                <div class="card-item card_1">00</div>
                <div class="card-item card_2">00</div>
                <div class="card-item card_3">00</div>
                <div class="card-item card_4">00</div>
            </div>
            <div class="time-name">{{ 'activity.second' | t}}</div>
        </div>      
    </div>
</div>

