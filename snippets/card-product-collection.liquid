{% style %}
    .product-box {
    font-family: var(--self_font, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    padding: 1.25rem;
    display: flex;
    justify-content: flex-start;
    align-items: stretch;
    gap: 1.25rem;
    scroll-behavior: smooth;
    }

    .product-box.show-wrap {
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.25rem 1.5%;
    }

    .product-box.hidden-overflow {
    overflow: hidden;
    }

    .product-box.flex-start {
    justify-content: flex-start;
    }

    .product-item {
    margin-top: 0;
    width: calc(20% - 1.25rem);
    min-width: 280px;
    display: flex;
    flex-direction: column;
    border-radius: 0.875rem;
    cursor: pointer;
    background: var(--gradient-background, linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%));
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    text-decoration: none;
    color: inherit;
    flex-shrink: 0;
    border: 1px solid rgba(255, 255, 255, 0.9);
    overflow: hidden;
    position: relative;
    backdrop-filter: blur(8px);
    }

    .product-box.show-wrap .product-item {
    width: calc(25% - 1.25rem);
    margin-bottom: 1.25rem;
    flex-shrink: 1;
    }

    .product-item:hover {
    transform: translateY(-6px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    border-color: rgba(var(--color-primary, 233, 30, 99), 0.15);
    }

    .product-img-box {
    overflow: hidden;
    border-radius: 0.875rem 0.875rem 0 0;
    height: 260px;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    }

    .product-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s cubic-bezier(0.23, 1, 0.32, 1);
    will-change: transform;
    }

    .product-item:hover .product-img {
    transform: scale(1.05);
    }

    .product-params {
    padding: 1rem 1rem 0.75rem;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    flex-grow: 1;
    background: rgba(255, 255, 255, 0.85);
    }

    .product-title {
    width: 100%;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    font-family: var(--self_font, -apple-system, sans-serif);
    font-size: 1.1rem;
    font-weight: 600;
    line-height: 1.4;
    color: #2d3748;
    margin-bottom: 0.75rem;
    min-height: 2.8em;
    letter-spacing: -0.01em;
    }

    .product-vendor-tags-box {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    padding: 0.5rem 0 0.75rem;
    gap: 0.5rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
    margin-bottom: 0.75rem;
    }

    .product-vendor {
    font-size: 0.8rem;
    color: var(--color-primary, #e91e63);
    font-weight: 600;
    background: linear-gradient(135deg, rgba(var(--color-primary, 233, 30, 99), 0.08), rgba(var(--color-primary, 233, 30, 99), 0.12));
    padding: 0.25rem 0.75rem;
    border-radius: 0.75rem;
    border: 1px solid rgba(var(--color-primary, 233, 30, 99), 0.15);
    backdrop-filter: blur(4px);
    }

    .product-tag {
    font-size: 0.7rem;
    font-weight: 500;
    color: #fff;
    padding: 0.2rem 0.6rem;
    border-radius: 0.375rem;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    transform: scale(0.95);
    transition: all 0.3s ease;
    backdrop-filter: blur(4px);
    }

    .product-tag:hover {
    transform: scale(1);
    opacity: 0.9;
    }

    .product-tag[data-tag="New"] {
    background: linear-gradient(135deg, #48bb78, #38a169);
    }

    .product-tag[data-tag="BestSelling"] {
    background: linear-gradient(135deg, #ed8936, #dd6b20);
    }

    .product-tag[data-tag="Popular"],
    .product-tag[data-tag="Hot"] {
    background: linear-gradient(135deg, #f56565, #e53e3e);
    }

    .product-tag[data-tag="Plus"],
    .product-tag[data-tag="Classic style"] {
    background: linear-gradient(135deg, #4299e1, #3182ce);
    }

    .price-container {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    width: 100%;
    margin: 0.5rem 0 0.875rem;
    }

    .now-price {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-primary, #e91e63);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    letter-spacing: -0.02em;
    }

    .origin-price {
    font-size: 0.9rem;
    color: #718096;
    text-decoration: line-through;
    font-weight: 500;
    opacity: 0.8;
    }

    .add-loading-box {
    margin: 0 auto;
    position: relative;
    width: 80%;
    height: 2.75rem;
    border-radius: 0.5rem;
    overflow: hidden;
    border: none;
    text-align: center;
    transition: all 0.3s ease;
    backdrop-filter: blur(8px);
    background: rgba(255, 255, 255, 0.9);
    }

    .add-loading-box.disabled-add {
    background: linear-gradient(135deg, #a0aec0, #718096);
    cursor: not-allowed;
    opacity: 0.7;
    }

    .add-btn {
    width: 100%;
    height: 100%;
    border: none;
    background: linear-gradient(135deg, var(--color-primary, #e91e63), var(--color-secondary, #d81b60));
    color: white;
    font-family: var(--self_font, -apple-system, sans-serif);
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.35s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    letter-spacing: 0.02em;
    }

    .add-btn:not(.disabled-add):hover {
    background: linear-gradient(135deg, var(--color-secondary, #d81b60), var(--color-accent, #c2185b));
    transform: translateY(-1px);
    box-shadow: 0 4px 16px rgba(var(--color-primary, 233, 30, 99), 0.25);
    }

    .add-btn.disabled-add {
    background: linear-gradient(135deg, #a0aec0, #718096);
    cursor: not-allowed;
    opacity: 0.6;
    transform: none;
    }

    .add-or-sold {
    font-size: 0.95rem;
    font-weight: 600;
    color: white;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
    transition: all 0.3s ease;
    }

    .sold-out {
    opacity: 0.85;
    }

    .placeholder-box {
    visibility: hidden;
    height: 0;
    margin: 0;
    padding: 0;
    border: none;
    min-width: 0;
    width: 0;
    }

    .collection-banner-controller {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.25rem;
    margin-top: 1.75rem;
    padding: 0.875rem;
    }

    .banner-btn {
    width: 2.75rem;
    height: 2.75rem;
    border-radius: 50%;
    border: 1.5px solid rgba(var(--color-primary, 233, 30, 99), 0.2);
    background: rgba(255, 255, 255, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    color: var(--color-primary, #e91e63);
    backdrop-filter: blur(8px);
    }

    .banner-btn:hover:not(:disabled) {
    background: var(--color-primary, #e91e63);
    color: white;
    border-color: var(--color-primary, #e91e63);
    transform: scale(1.08);
    }

    .banner-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
    }

    .banner-con-counter {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 1rem;
    font-weight: 600;
    color: #2d3748;
    background: rgba(var(--color-primary, 233, 30, 99), 0.08);
    padding: 0.375rem 1.25rem;
    border-radius: 1.5rem;
    backdrop-filter: blur(8px);
    }

    .charactor {
    color: #718096;
    margin: 0 0.15rem;
    font-weight: 500;
    }

    /* 响应式设计优化 */
    @media screen and (max-width: 1200px) {
    .product-item {
    width: calc(25% - 1rem);
    min-width: 240px;
    }

    .product-box.show-wrap .product-item {
    width: calc(33.333% - 1rem);
    }
    }

    @media screen and (max-width: 900px) {
    .product-item {
    width: calc(33.333% - 1rem);
    min-width: 220px;
    }

    .product-box.show-wrap .product-item {
    width: calc(50% - 1rem);
    }

    .product-img-box {
    height: 220px;
    }
    }

    @media screen and (max-width: 750px) {
    .product-box {
    padding: 0.875rem 0.5rem;
    gap: 1rem;
    }

    .product-item {
    width: calc(50% - 0.5rem);
    min-width: calc(50vw - 1.25rem);
    margin: 0.875rem auto;
    }

    .product-box.show-wrap .product-item {
    width: calc(50% - 0.5rem);
    margin-bottom: 0.875rem;
    }

    .product-img-box {
    height: 200px;
    }

    .product-title {
    font-size: 1rem;
    -webkit-line-clamp: 2;
    }

    .now-price {
    font-size: 1.1rem;
    }

    .origin-price {
    font-size: 0.85rem;
    }

    .banner-btn {
    width: 2.5rem;
    height: 2.5rem;
    }

    .banner-con-counter {
    font-size: 0.9rem;
    padding: 0.3rem 1rem;
    }
    }

    @media screen and (max-width: 450px) {
    .product-box {
    padding: 0.5rem 0.25rem;
    gap: 0.75rem;
    }

    .product-item {
    width: calc(100% - 0.5rem);
    min-width: calc(100vw - 1.5rem);
    margin: 0.75rem auto;
    border-radius: 0.75rem;
    }

    .product-box.show-wrap .product-item {
    width: 100%;
    }

    .product-params {
    padding: 0.875rem 0.75rem 0.5rem;
    }

    .product-form {
    padding: 0 0.75rem 0.75rem;
    }

    .product-img-box {
    height: 180px;
    border-radius: 0.75rem 0.75rem 0 0;
    }

    .add-btn {
    font-size: 0.9rem;
    }

    .banner-con-counter {
    font-size: 0.85rem;
    padding: 0.25rem 0.875rem;
    }

    .banner-btn {
    width: 2.25rem;
    height: 2.25rem;
    }
    }

    /* 加载动画优化 */
    @keyframes shimmer {
    0% {
    background-position: -200% 0;
    }
    100% {
    background-position: 200% 0;
    }
    }

    .loading-shimmer {
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200% 100%;
    animation: shimmer 2s ease-in-out infinite;
    }

    /* 添加购物车成功动画 */
    @keyframes addToCartSuccess {
    0% {
    transform: scale(1);
    background: linear-gradient(135deg, var(--color-primary, #e91e63), var(--color-secondary, #d81b60));
    }
    50% {
    transform: scale(0.98);
    background: linear-gradient(135deg, #48bb78, #38a169);
    }
    100% {
    transform: scale(1);
    background: linear-gradient(135deg, var(--color-primary, #e91e63), var(--color-secondary, #d81b60));
    }
    }

    .add-to-cart-success {
    animation: addToCartSuccess 0.6s ease-in-out;
    }

    /* 无障碍访问优化 */
    @media (prefers-reduced-motion: reduce) {
    .product-item,
    .product-img,
    .add-btn,
    .banner-btn {
    transition: none;
    animation: none;
    }

    .product-item:hover {
    transform: none;
    }
    }

    /* 深色模式支持 */
    @media (prefers-color-scheme: dark) {
    .product-item {
    background: linear-gradient(135deg, #2d3748 0%, #4a5568 100%);
    border-color: rgba(255, 255, 255, 0.1);
    }

    .product-params {
    background: rgba(45, 55, 72, 0.9);
    }

    .product-title {
    color: #e2e8f0;
    }

    .product-vendor-tags-box {
    border-bottom-color: rgba(255, 255, 255, 0.1);
    }
    }
{% endstyle %}
<collection-banner-control>
<div class='product-box  {% if products_to_show <= 3 %}flex-start{% endif %} {% if show_wrap %}show-wrap {% else %}hidden-overflow{% endif %}'>
    {% if products.size >= 1 %}
        {% for product in products limit:products_to_show %}
            <a href={{ product.url }} class='product-item' data-margin="24">
              <div class='product-img-box'>
                <img class='product-img' src={{ product.featured_image | image_url:width:product.featured_image.width }} alt={{ product.title }} width=200 height=200 />
              </div>
              <div class='product-params'>
                <p class='product-title'>{{ product.title }}</p>
               <div class="product-vendor-tags-box">
                {% if product.vendor != empty %}
                    <span class="product-vendor gradient-text">{{  product.vendor }}</span>

                {% endif %}
                {% if product.tags.size > 0 %}
                    {% for tag in product.tags %}
                        {% case tag %}
                            {% when 'New' %}
                                <span class="product-tag" data-tag="{{ tag }}">{{ 'products.product.tags.new' | t }}</span>
                            {% when 'BestSelling' %}
                                <span class="product-tag" data-tag="{{ tag }}">{{ 'products.product.tags.best_selling' | t }}</span>
                            {% when 'Plus' %}
                                <span class="product-tag" data-tag="{{ tag }}">{{ 'products.product.tags.plus' | t }}</span>
                            {% when 'Popular' %}
                                <span class="product-tag" data-tag="{{ tag }}">{{ 'products.product.tags.popular' | t }}</span>
                            {% when 'Hot' %}
                                <span class="product-tag" data-tag="{{ tag }}">{{ 'products.product.tags.hot' | t }}</span>
                            {% when 'Classic style' %}
                                <span class="product-tag" data-tag="{{ tag }}">{{ 'products.product.tags.classic_style' | t }}</span>
                            {% else %}
                                <span class="product-tag" data-tag="{{ tag }}">{{ tag }}</span>
                        {% endcase %}
                    {% endfor %}
                {% endif %}
               </div>
                {% if currency_code_enabled %}
                    <span class='now-price'>{{ product.price_max | money_with_currency}}</span>
                    <span class='origin-price line-through'>{{ product.compare_at_price | money_with_currency }}</span>
                {% else %}
                    <span class='now-price'>{{ product.price_max | money }}</span>
                    <span class='origin-price line-through'>{{ product.compare_at_price | money}}</span>
                {% endif %}

              </div>
              <product-form class="product-form">
                <div class='add-loading-box {% if product.selected_or_first_available_variant.available == false %}
                    disabled-add
                {% endif %}'>
                    {% assign product_form_id = 'quick-add-' | append: section_id | append: product.id  %}
                {% form 'product',
                        product,
                        id: product_form_id,
                        class: 'form',
                        novalidate: 'novalidate',
                        data-type: 'add-to-cart-form'
                    %}
                    <input
                        type="hidden"
                        name="id"
                        value="{{ product.selected_or_first_available_variant.id }}"
                        class="product-variant-id"
                        {% if product.selected_or_first_available_variant.available == false %}
                            disabled
                        {% endif %}
                    >
                    <button type='submit' name='add' class="add-btn {% if product.selected_or_first_available_variant.available == false %}
                        disabled-add
                    {% endif %}"
                    {% if product.selected_or_first_available_variant.available == false %}
                        disabled
                    {% endif %}
                    >
                        <span data-product-id={{ product.id }} class='add-or-sold {% if product.selected_or_first_available_variant.available %}add-to-cart{% else %}sold-out{% endif %}'>
                            {%- if product.selected_or_first_available_variant.available -%}
                            {{ 'products.product.add_to_cart' | t }}
                            {%- else -%}
                            {{ 'products.product.sold_out' | t }}
                            {%- endif -%}

                        </span>
                    </button>
                    {% render 'loading' %}
                {% endform %}
                </div>
            </product-form>
            </a>
        {% endfor %}
    {% else %}
        <div class='product-item' data-margin='24'>
            <div class='product-img-box'>
                <img class='product-img' src={{ 'default.jpg' | asset_img_url:'large' }} alt='defalut_img' width='270' height='290' />
            </div>
            <div class='product-params'>
                <p class='product-title'>collection default title</p>
                <span class='now-price'>{{ 399 | money_with_currency}}</span>
                <span class='origin-price'>{{ 699 | money_with_currency }}</span>
            </div>
        </div>
    {% endif %}
        {% if show_wrap %}
            <div class='product-item placeholder-box'></div>
        {% endif %}
</div>
{% if show_wrap == false and products.size > 5 and products_to_show > 5 %}
    <div class='collection-banner-controller banner-con-controller'>
        <button class='banner-btn collection-btn-previous'>
            {% render 'icon-button-previous-next' %}
          </button>
          <div class='banner-con-counter'>
            <span class='collection-current-page'>1</span>
            <span class='charactor'>/</span>
            <span class='collection-total-page' data-show-count={{ products_to_show }} data-pages={{ products_to_show | minus:4 }}>{{ products_to_show | minus:4 }}</span>
          </div>
          <button class='banner-btn collection-btn-next'>
            {% render 'icon-button-previous-next' %}
          </button>
    </div>
{% endif %}
</collection-banner-control>

<script src={{ 'collection-banner-control.js' | asset_url }} defer='defer'></script>
<script src={{ 'product-form.js' | asset_url }} defer='defer'></script>

