
{% style %}
.header-menu-box{
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.link-box a{
    color: var(--black-color);
}

.link-box::after{
    position: relative;
    left: 50%;
    display: block;
    content: '';
    width: 0;
    height: 4px;
    border-radius: 2px;
    background: {{section.settings.color_underline}};
    transition: all .3s ease-in-out;
}

.link-box:hover::after{
    position: relative;
    left: 0%;
    display: block;
    content: '';
    width: 100%;
    height: 4px;
    border-radius: 2px;
    background: {{section.settings.color_underline}};
    transition: all .3s ease-in-out;
}


{% endstyle %}


<div class='header-menu-box'>
    {% for link in section.settings.header_menu.links %}
        <div class='link-box'>
            {{ link.title | link_to:link.url }}
        </div>
    {% endfor %} 
</div>   