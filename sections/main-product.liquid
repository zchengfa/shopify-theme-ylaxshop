{% style %}
.main-product{
  padding-top: {{ section.settings.padding_top | append: 'px' }};
  padding-bottom: {{ section.settings.padding_bottom | append: 'px' }};
  background-color: transparent;
}
.main-product-content{
  padding: 1rem 2rem;
  display: flex;
  justify-content: center;
  align-items: center;
}
.main-product-img{
  width: 35vw;
  height: 35vw;
  border-radius: 2rem;
}
.content-item{
  width: 40vw;
  min-height: 35vw;
}
.product-info-item{
  margin-bottom: 1rem;
}
.product-title{
  font-family: var(--self_font);
  font-size: calc(var(--font-scale) * 2.5rem);
}
.product-price{
  font-family: var(--self_font);
}
.product-price:nth-child(2){
  margin-left: .5rem;
  color: rgb(var(--color-secondary-button-text));
}
.badge{
  border: 1px solid transparent;
    border-radius: 1rem;
    display: inline-block;
    font-size: 1.2rem;
    letter-spacing: .1rem;
    line-height: 1;
    padding: .5rem 1.3rem .6rem;
    text-align: center;
    background-color: rgb(var(--color-badge-background));
    border-color: rgba(var(--color-badge-border), var(--alpha-badge-border));
    color: rgb(var(--color-badge-foreground));
    word-break: break-word;
    transform: scale(.7);
}
.price__badge-sale{
  background-color: #3b50d4;
  color: #fff;
}
.price__badge-sold-out{
  background-color: #8ae08a;
  color: #fff;
}
.quantity{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 .5rem;
  width: fit-content;
  height: 2.6rem;
    border-radius: .5rem;
    border: 2px solid var(--black-color);
    background: rgb(var(--color-background));
}
.quantity__button{
 
    width: 2rem;
    height: 2.6rem;
    transform:scale(.6);
}
.quantity__label{
  display: block;
  color: rgba(0,0,0,.5);
}
input::-webkit-outer-spin-button,input::-webkit-inner-spin-button{
    -webkit-appearance:none;
}    
input[type="number"]{
    -moz-appearance:textfield;
}
.quantity__input{
    width: 2rem;
    height: 2.6rem;
    border: none;
    text-align: center;
    outline:none;
    background: transparent;
}

.product-options-item{
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  margin-bottom: 1rem;
  font-family: var(--self_font);
}
.product-options-label{
  width: 8rem;
  white-space: nowrap;
  color: rgb(var(--color-secondary-button-text));
}
.product-options-value{
  margin-left: 2rem;
  flex: 1;
  line-height: initial;
}
.main-product-info-other{
  display: flex;
  justify-content: center;
  align-items: flex-start;
  margin: 0 auto;
  width: {{ section.settings.main_product_other_width | append: 'vw' }};
}
.product-info-other-normal{
  display: block;
}
.quantity__rules-cart{
  position:relative;
}
.quantity__rules-cart .loading__spinner{
  top: 0;
  left: .5rem;
  transform: scale(.6);
}
@media screen and (max-width:  450px){
    .main-product-content{
       flex-direction: column;
    }
    .content-item{
      margin-bottom: 1rem;
      width: 100%;
    }
    .main-product-img{
      width: 100%;
      height: auto;
    }
    .product-title{
      font-size: calc(var(--font-scale) * 1.5rem);
    }
    .product-form__submit{
      width: 100%;
    }
    .main-product-info-other{
      display: block;
    }
    .product-options-item{
      display: block;
    }
}
{% endstyle %}
<section 
    id="MainProduct-{{ section.id }}"
    class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} main-product"
    data-section="{{ section.id }}">
  <div class="main-product-content">
    <div class="main-product-img-box content-item">
      <img class="main-product-img" src={{ product.images.first | image_url }} alt="product_img" width=0 height=0 />
    </div>
    <div class="main-product-info content-item" id="main-product-info">
      {%- assign product_form_id = 'product-form-' | append: section.id -%}
     {% for block in section.blocks %}
        {% case block.type %}
          {% when '@app' %}
            {% render block %}
          {% when 'text' %}
          <div class="product-info-item">
            <p class="product-title">{{ product.title }}</p>
          </div>
          {% when 'description' %}
          <div class="product-info-item">
            {{ product.description }}
          </div>
          {% when 'options_panel' %}
            <div class='product-options-box product-info-item'>
            {% for option in product.options_with_values %}
              <div class="product-options-item">
                <label class="product-options-label">{{ option.name | append:'ï¼š' }}</label>
                <span class="product-options-value">{{ option.values }}</span>
              </div>    
            {% endfor %}  
            
            </div>
          {% when 'price' %}
          <div class="product-info-item">
            <span class="product-price">{{ product.price | money_with_currency }}</span> 
            <span class="product-price  line-through">{{ product.compare_at_price | money_with_currency }}</span> 
            {%- if product.selected_or_first_available_variant.available -%}
              <span class="badge price__badge-sale color-{{ settings.sale_badge_color_scheme }}">
                {{ 'products.product.on_sale' | t }}
              </span>
              {%- else -%}
              <span class="badge price__badge-sold-out color-{{ settings.sold_out_badge_color_scheme }}">
                {{ 'products.product.sold_out' | t }}
              </span>
              {%- endif -%}
          </div>
          {% when 'quantity_selector' %}
            {%- assign cart_qty = cart
              | item_count_for_variant: product.selected_or_first_available_variant.id
            -%}
            <label class="quantity__label form__label product-info-item" for="Quantity-{{ section.id }}">
              <span>{{ 'products.product.quantity.label' | t }}</span>
              
              <span class="quantity__rules-cart{% if cart_qty == 0 %} hidden{% endif %}">
                {%- render 'loading' -%}
                <span class="quantity-cart-span"
                  >(
                  {{- 'products.product.quantity.in_cart_html' | t: quantity: cart_qty -}}
                  )</span
                >
              </span>
            </label>
            <quantity-input data-fetch-allowed="{{ false }}" class="quantity product-info-item" data-url="{{ product.url }}" data-section="{{ section.id }}">
              <button class="quantity__button" name="minus" type="button">
                {% render 'icon-minus' %}
              </button>
              <input
                class="quantity__input"
                type="number"
                name="quantity"
                id="Quantity-{{ section.id }}"
                data-cart-quantity="{{ cart_qty }}"
                data-min="{{ product.selected_or_first_available_variant.quantity_rule.min }}"
                min="{{ product.selected_or_first_available_variant.quantity_rule.min }}"
                {% if product.selected_or_first_available_variant.quantity_rule.max != null %}
                  data-max="{{ product.selected_or_first_available_variant.quantity_rule.max }}"
                  max="{{ product.selected_or_first_available_variant.quantity_rule.max }}"
                {% endif %}
                step="{{ product.selected_or_first_available_variant.quantity_rule.increment }}"
                value="{{ product.selected_or_first_available_variant.quantity_rule.min }}"
                form="{{ product_form_id }}"
              >
              <button class="quantity__button" name="plus" type="button">
                {% render 'icon-plus' %}
              </button>
            </quantity-input>
            {% when 'buy_buttons' %}
              {% assign input_id =  section.id | prepend: 'Quantity-' %}
              {%- render 'buy-buttons',
                block: block,
                product: product,
                product_form_id: product_form_id,
                section_id: section.id,
                show_pickup_availability: true,
                input_id : input_id
              -%}
              <script src={{ 'product-form.js' | asset_url }} defer></script>
        {% endcase %}  
     {% endfor %}
    </div>
  </div>
  <main-product-info-other>
    <div class="main-product-info-other">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when "product_detail_desc" %} 
              {% if shop.metaobjects[block.settings.metaobjects_type][product.variants[0].sku] %}
                {% assign product_sku = product.variants[0].sku %} 
                {% render 'product-detail-desc',
                    SKU:  product_sku ,
                    metaobjects_type: block.settings.metaobjects_type,
                    metaobjects_fields: block.settings.metaobjects_fields,
                    card_bg: block.settings.card_bg,
                    card_text_margin_bottom: block.settings.card_text_margin_bottom,
                    card_shadow_color: block.settings.card_shadow_color,
                    card_padding: block.settings.card_padding,
                    image_title: block.settings.image_title
                %}
              {% endif %}  
          {% when "recommend_products" %}   
            {% render 'recommend-products' ,
              recommend_title: block.settings.recommend_title,
              complementary_title: block.settings.complementary_title %}
           
        {% endcase %}  
      {% endfor %}
    </div>
  </main-product-info-other>
</section>


